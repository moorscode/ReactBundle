<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="limenius_react.context_provider.class">Limenius\ReactRenderer\Context\SymfonyContextProvider</parameter>
        <parameter key="limenius_react.render_factory.class">Limenius\ReactRenderer\Factory\RendererFactory</parameter>
    </parameters>

    <services>
        <service id="limenius_react.context_provider" class="%limenius_react.context_provider.class%" autowire="true">
        </service>
        <service id="limenius_react.render_factory" class="%limenius_react.render_factory.class%" autowire="true">
            <argument type="tagged_iterator" tag="limenius_react.renderer"/>
            <argument>%limenius_react.server_bundle_path%</argument>
            <argument>%limenius_react.server_socket_path%</argument>
        </service>
    </services>
</container>
